# NeuTTS-Air TTS Service Configuration

# Model Configuration
MODEL_CHECKPOINT_PATH=neuphonic/neutts-air
CODEC_REPO=neuphonic/neucodec

# Device Configuration
BACKBONE_DEVICE=cuda
CODEC_DEVICE=cuda

# Backend Selection
USE_VLLM=true
USE_GGUF=false
USE_ASYNC_ENGINE=false

# Server Configuration
HOST=127.0.0.1
PORT=8002
DEBUG=false

# Model Parameters
MAX_CONTEXT=6144
GPU_MEMORY_UTILIZATION=0.7
SEED=42

# Synthesis Parameters
TEMPERATURE=1.0
MAX_TOKENS=2048
MIN_TOKENS=50
TOP_P=1.0
TOP_K=50

# Streaming Parameters
STREAMING_FRAMES_PER_CHUNK=25
STREAMING_OVERLAP_FRAMES=1
STREAMING_LOOKFORWARD=5
STREAMING_LOOKBACK=50

# Audio Parameters
SAMPLE_RATE=24000
HOP_LENGTH=480

# Phonemizer Configuration
# For Linux (Ubuntu/Debian):
PHONEMIZER_ESPEAK_PATH=/usr/bin/espeak-ng
PHONEMIZER_ESPEAK_LIBRARY=/usr/lib/x86_64-linux-gnu/libespeak-ng.so.1.1.49
# For macOS:
# PHONEMIZER_ESPEAK_PATH=/opt/homebrew/bin/espeak-ng
# PHONEMIZER_ESPEAK_LIBRARY=/opt/homebrew/lib/libespeak-ng.dylib
ENABLE_PHONEMIZATION=true
PHONEMIZER_LANGUAGE=ar
PHONEMIZER_PRESERVE_PUNCTUATION=true
PHONEMIZER_WITH_STRESS=true


# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tts_service.log
