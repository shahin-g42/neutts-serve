# NeuTTS-Air TTS Service Configuration for Linux (Ubuntu/Debian)

# Model Configuration
MODEL_CHECKPOINT_PATH=neuphonic/neutts-air
BACKBONE_DEVICE=cuda
CODEC_REPO=neuphonic/neucodec
CODEC_DEVICE=cuda

# Backend Selection
USE_VLLM=true
USE_GGUF=false
USE_ASYNC_ENGINE=true

# vLLM Configuration
GPU_MEMORY_UTILIZATION=0.7
MAX_CONTEXT=2048

# Server Configuration
HOST=0.0.0.0
PORT=8002
DEBUG=false

# Synthesis Parameters
TEMPERATURE=1.0
MAX_TOKENS=2048
MIN_TOKENS=50
TOP_K=50
TOP_P=1.0

# Audio Configuration
SAMPLE_RATE=24000
HOP_LENGTH=480

# Phonemizer Configuration for Linux (Ubuntu/Debian)
PHONEMIZER_ESPEAK_PATH=/usr/bin/espeak-ng
PHONEMIZER_ESPEAK_LIBRARY=/usr/lib/x86_64-linux-gnu/libespeak-ng.so

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tts_service.log
